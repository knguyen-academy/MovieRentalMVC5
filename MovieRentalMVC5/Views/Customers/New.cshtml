@model MovieRentalMVC5.Models.Customer

@{
    /**/

    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@*@Html.BeginForm("Action", "Controller")*@

@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Birthdate)
        @Html.TextBoxFor(c => c.Birthdate, new { @class = "form-control" })
    </div>

     <div class="checkbox">
        <label>
          @Html.CheckBoxFor( c=>c.IsSubsribedToNewsLetter) Subscribed to Newsletter?
        </label>
    </div>

}

